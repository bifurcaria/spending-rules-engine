{
	"compilerOptions": {
		"module": "nodenext",
		"target": "esnext",
		"types": ["node"],
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"strict": true,
		"verbatimModuleSyntax": false,
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleDetection": "force",
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"include": ["src/**/*"]
}
